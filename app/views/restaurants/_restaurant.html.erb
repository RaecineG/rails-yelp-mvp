<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= restaurant.name %></h5>
        <p class="card-title"><em><%= restaurant.category %></em></p>
        <p class="card-text"> <%= restaurant.address %> </p>
        <p class="card-text"><small class="text-muted"> Contact: <%= restaurant.phone_number %> </small></p>
      </div>
    </div>
  </div>
</div>
